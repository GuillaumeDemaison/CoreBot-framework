{
    "controller": {
        "hears": {
            "button": {
                "enable": false,
                "image_url": "https://image.slidesharecdn.com/botkitsignal-160526164159/95/build-a-bot-with-botkit-1-638.jpg?cb=1464280993",
                "open_link": "https://botkit.ai/docs/",
                "listener":{
                    "button": {
                        "pattern": ["^button-button$"],
                        "from": ["direct_mention", "self_message", "direct_message"],
                        "privilege": ["user"],
                        "access_list": ["default"]
                    },
                    "open_link": {
                        "pattern": ["^button-openlink$"],
                        "from": ["direct_mention", "self_message", "direct_message"],
                        "privilege": ["user"],
                        "access_list": ["default"]
                    },
                    "execute_command": {
                        "pattern": ["^button-executecommand$"],
                        "from": ["direct_mention", "self_message", "direct_message"],
                        "privilege": ["user"],
                        "access_list": ["default"]
                    },
                    "submit": {
                        "pattern": ["^button-sbumit$"],
                        "from": ["direct_mention", "self_message", "direct_message"],
                        "privilege": ["user"],
                        "access_list": ["default"]
                    }
                },
                "msg": {
                    "help": [
                        "Provide button feature (Cisco Jabber only)\n",
                        "- _No argument_\n",
                        "_Example_: `button *`",
                        "Used to integrate action in button feature of Jabber conversation"
                    ],
                    "text": "Get cards"
                }
            }
        }
    }
}
