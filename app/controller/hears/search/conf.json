{
    "controller": {
        "hears": {
            "search": {
                "enable": false,
                "limit": 10,
                "key_length": 2,
                "storage": "",
                "listener": {
                    "search": {
                        "pattern": ["^search *"],
                        "from": ["direct_message", "message_received"],
                        "privilege": ["user"],
                        "access_list": ["*"]
                    }
                },
                "msg": {
                    "found": "Search result",
                    "notfound": "No result found",
                    "too_short": "Your text to search is too short",
                    "help": [
                        "Search engine\n",
                        "- _No argument_\n",
                        "_Example_: `search password reset`",
                        "Compose your search request as you do on your web browser"
                    ]
                }
            }
        }
    }
}

