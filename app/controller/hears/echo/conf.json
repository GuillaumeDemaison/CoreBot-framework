{
    "controller": {
        "hears": {
            "echo": {
                "enable": false,
                "listener":{
                    "echo": {
                        "pattern":["^echo *"],
                        "from": ["direct_mention", "direct_message"],
                        "privilege": ["user"],
                        "access_list": ["default"],
                        "remove_pattern": false
                    }
                },
                "msg": {
                    "help": [
                        "Repeat the incoming message\n",
                        "- _No argument_\n",
                        "_Example_: `echo what you want to echo`",
                        "Provide an text echo for simple ping-pong or validation (format...)"
                    ]
                }
            }
        }
    }
}
