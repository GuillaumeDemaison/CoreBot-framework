{
    "controller": {
        "on": {
            "direct_mention": {
                "enable": true,
                "listener": {
                    "direct_mention": {
                        "from": "direct_mention",
                        "privilege": ["user"],
                        "access_list": ["*"]
                    }
                },
                "msg": {
                    "help": [
                        "Direct mention event\n",
                        "- _No argument_"
                    ]
                }
            }
        }
    }
}
